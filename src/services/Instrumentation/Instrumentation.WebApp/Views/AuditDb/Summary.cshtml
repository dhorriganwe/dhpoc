@model Instrumentation.WebApp.Models.ViewQueryAuditLogSummary
@{
    Model.ViewQueryCommon.ViewTitle = "Instrumentation Viewer";
}

<div class="PageRoot">
    
    @Html.Action("Header", "Home", Model.ViewQueryCommon)

    @using (@Html.BeginForm())
    {
        <div>
            <table>
                <tr>
                    <th class="TextLabelLeft">AuditLog Summary</th><th></th>
                </tr>
            </table>
        </div>
    
        <div class="PageSection">
            <table class="alternate_color">
                <tr>
                    <td>TotalRecordCount</td>
                    <td class="TextInputSmall">@Html.TextBoxFor(q => q.TotalRecordCount, null, null)</td>
                </tr>
            </table>
        </div>

        <div class="PageSection">
            <table class="alternate_color">
                <tr>
                    <th>ApplicationName</th>
                    <th>Count</th>
                </tr>
                @foreach (var appName in Model.ApplicationNames)
                {
                    <tr>
                        <td>
                            <a href="AuditLogByApplicationName/@appName.Name">@appName.Name</a>
                        </td>
                        <td>
                            @appName.Count
                        </td>
                    </tr>
                }
            </table>
        </div>
            
        <div class="PageSection">
            <table class="alternate_color">
                <tr>
                    <th>FeatureName</th>
                    <th>Count</th>
                </tr>
                @foreach (var featureName in Model.FeatureNames)
                {
                    <tr>
                        <td>
                            <a href="AuditLogByFeatureName/@featureName.Name">@featureName.Name</a>
                        </td>
                        <td>
                            @featureName.Count
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="PageSection">
            <table class="alternate_color">
                <tr>
                    <th>Categories</th>
                    <th>Count</th>
                </tr>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>
                            <a href="AuditLogByCategory/@category.Name">@category.Name</a>
                        </td>
                        <td>
                            @category.Count
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
        