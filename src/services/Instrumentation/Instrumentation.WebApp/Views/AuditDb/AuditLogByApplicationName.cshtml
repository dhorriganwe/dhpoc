@model Instrumentation.WebApp.Models.ViewQueryAuditLogByApplicationName
@{
    Model.ViewTitle = "Instrumentation Viewer";
}

<div class="PageRoot">
    
    @Html.Action("Header", "Home", Model)

    @using (@Html.BeginForm())
    {
        @Html.Action("DbSelect", "AuditDb", Model)
        
        <div class="PageSectionWithBorder">

            <div>
                <table class="alternate_color">
                    <tr>
                        <td>ApplicationName</td>
                        <td class="CdmsTextInput4">@Html.TextBoxFor(q => q.ApplicationName, null, null)</td>
                        <td><input type="submit" name="Command" value="Search"/></td>
                    </tr>
                </table>
            </div>
            
@*            Summary*@

            @Html.Action("SummaryFeatureNames", "AuditDb", Model)


            @Html.Action("AuditLogGrid", Model)

            @foreach(var auditLog in Model.AuditLogs)
            { 
                @Html.Action("AuditLogRecord", auditLog)
                <br />
            }
        </div>
    }
</div>
        
