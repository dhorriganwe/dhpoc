@model Instrumentation.WebApp.Models.ViewQueryAuditLogList
@{
    Layout = null;
}

<div>
    <table>
        <tr>
            <td>count</td>
            <td>@Model.AuditLogs.Count</td>
        </tr>
    </table>
    <table class="alternate_color">
        <tr>
            <th>Id</th>
            <th>EventId</th>
            <th>ApplicationName</th>
            <th>FeatureName</th>
            <th>Category</th>
            <th>MessageCode</th>
            <th>Messages</th>
            <th>TraceLevel</th>
            <th>LoginName</th>
            <th>AuditedOn</th>
            <th>AdditionalInfo</th>
        </tr>
        @foreach (var auditLog in Model.AuditLogs)
        {
            <tr>
                <td>@Html.ActionLink(auditLog.Id, "AuditLogById", "AuditDb", new {id = auditLog.Id}, null)</td>

                @if (string.IsNullOrEmpty(auditLog.EventId)){ <td></td> }
                else {
                    <td class="eventId">@Html.ActionLink(auditLog.EventId, "AuditLogByEventId", "AuditDb", new { id = auditLog.EventId }, null )</td>
                }
                @if (string.IsNullOrEmpty(auditLog.ApplicationName)){ <td></td> }
                else {
                    <td>@Html.ActionLink(auditLog.ApplicationName, "AuditLogByApplicationName", "AuditDb", new { id = auditLog.ApplicationName }, null )</td>
                }
                @if (string.IsNullOrEmpty(auditLog.FeatureName)){ <td></td> }
                else {
                    <td>@Html.ActionLink(auditLog.FeatureName, "AuditLogByFeatureName", "AuditDb", new { id = auditLog.FeatureName }, null )</td>
                }
                @if (string.IsNullOrEmpty(auditLog.Category)){ <td></td> }
                else {
                    <td>@Html.ActionLink(auditLog.Category, "AuditLogByCategory", "AuditDb", new { id = auditLog.Category }, null )</td>
                }

                <td>@auditLog.MessageCode</td>
                <td class="messages">
                    <span title="@auditLog.Messages">@auditLog.Messages</span>
                </td>
                <td>@auditLog.TraceLevel</td>
                <td>@auditLog.LoginName</td>
                <td>@auditLog.AuditedOn</td>
                <td class="messages">
                    <span title="@auditLog.AdditionalInfo">@auditLog.AdditionalInfo</span>
                </td>
            </tr>
        }
    </table>
</div>
